{
  "name": "nt-taxoffice-node",
  "version": "1.0.0",
  "description": "NT - TAXOFFICE website built with Node.js and Express",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --runInBand",
    "test:unit": "jest --selectProjects backend frontend --runInBand",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.js' --runInBand",
    "test:backend": "jest --selectProjects backend --runInBand",
    "test:frontend": "jest --selectProjects frontend --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand",
    "test:e2e": "playwright test",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:parallel": "jest",
    "test:unit:parallel": "jest --selectProjects backend frontend",
    "test:integration:parallel": "jest --testMatch='**/tests/integration/**/*.test.js' --maxWorkers=4",
    "test:fast": "jest --testPathPattern=unit --maxWorkers=4",
    "test:db": "jest --testPathPattern=integration --runInBand",
    "test:admin": "jest --testMatch='**/integration/admin/**/*.test.js' --runInBand",
    "test:api": "jest --testMatch='**/integration/api/**/*.test.js' --runInBand",
    "test:services": "jest --testMatch='**/unit/services/**/*.test.js' --maxWorkers=4",
    "test:setup": "bash scripts/test-setup.sh",
    "test:db:init": "node scripts/init-test-db.js",
    "test:db:reset": "node scripts/init-test-db.js",
    "coverage:report": "bash scripts/coverage-report.sh",
    "coverage:view": "bash scripts/coverage-report.sh no",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "express",
    "tax",
    "accounting",
    "appointments"
  ],
  "author": "Teo",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mysql-session": "^3.0.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.0",
    "flatpickr": "^4.6.13",
    "helmet": "^7.1.0",
    "moment-timezone": "^0.5.45",
    "mysql2": "^3.6.5",
    "nodemailer": "^7.0.11",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^3.0.2",
    "playwright": "^1.57.0",
    "supertest": "^7.0.0"
  }
}
