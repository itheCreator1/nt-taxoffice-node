# Docker Environment Configuration
# Copy this file to .env.docker and customize for your deployment:
#   cp .env.docker.example .env.docker

# MySQL Configuration
MYSQL_ROOT_PASSWORD=change_this_root_password
MYSQL_DATABASE=nt_taxoffice
MYSQL_USER=nt_user
MYSQL_PASSWORD=change_this_password

# Application Database Configuration
DB_HOST=mysql
DB_USER=nt_user
DB_PASSWORD=change_this_password
DB_NAME=nt_taxoffice
DB_PORT=3306

# Session Configuration (IMPORTANT: Change in production!)
SESSION_SECRET=generate_a_secure_random_string_here

# Email Configuration
# For testing, use Ethereal: https://ethereal.email/
# For production, use your SMTP provider
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@ethereal.email
EMAIL_PASSWORD=your_email_password
ADMIN_EMAIL=admin@yourdomain.com
OFFICE_EMAIL=office@yourdomain.com
OFFICE_PHONE=+30 210 1234 567

# Application Configuration
APP_URL=http://localhost:3000
NODE_ENV=development
PORT=3000
