# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files with LF line endings
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.html text eol=lf
*.css text eol=lf
*.sql text eol=lf

# Shell scripts must have LF endings
*.sh text eol=lf

# Batch files need CRLF on Windows
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
